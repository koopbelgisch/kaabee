{
  "name": "kaabee",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "db:seed": "ts-node src/seed.ts",
    "db:import": "ts-node src/import.ts",
    "watch-build": "tsc -w",
    "serve": "node ./dist/server.js",
    "watch-serve": "nodemon",
    "dev": "yarn run watch-serve",
    "test": "yarn build && ava",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "lint:ts": "eslint --ext .ts .",
    "lint:pug": "pug-lint views/",
    "lint": "yarn run lint:ts && yarn run lint:pug",
    "watch-scss": "node-sass --watch scss/index.scss public/css/style.css",
    "scss": "node-sass scss/index.scss public/css/style.css"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/config": "^0.0.36",
    "@types/connect-flash": "^0.0.35",
    "@types/cookie-session": "^2.0.39",
    "@types/express": "4.17.4",
    "@types/faker": "^4.1.11",
    "@types/node": "^13.13.5",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-google-oauth2": "^0.1.3",
    "@types/pug": "^2.0.4",
    "@types/test-listen": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "ava": "^3.8.2",
    "axios": "^0.19.2",
    "bulma": "^0.8.2",
    "eslint": "^6.8.0",
    "faker": "^4.1.0",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0",
    "test-listen": "^1.1.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "class-validator": "^0.12.2",
    "config": "^3.3.1",
    "connect-flash": "^0.1.1",
    "cookie-session": "^1.4.0",
    "csv-parser": "^2.3.2",
    "express": "^4.17.1",
    "node-sass": "^4.14.1",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "typeorm": "^0.2.24"
  },
  "ava": {
    "timeout": "60s",
    "files": [
      "src/test/*.test.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  }
}
